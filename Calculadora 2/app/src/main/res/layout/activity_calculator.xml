<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_calculator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.upc.pda.clemente.laura.calculadora.CalculatorActivity"
    android:gravity="center_horizontal">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/grid_Layout"
        android:layout_marginTop="11dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <Button
            android:text="CLR"
            android:layout_height="wrap_content"
            android:id="@+id/btn_clear"
            android:textColor="?android:attr/textColorTertiary"
            android:layout_row="0"
            android:layout_column="4"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/text_result"
            android:layout_toEndOf="@+id/text_result"
            android:onClick="clickclear"
            android:layout_marginTop="8dp"
            android:layout_width="60dp" />

        <Button
            android:text="0"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:layout_below="@+id/text_result"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/btn_0"
            android:layout_height="wrap_content"
            android:layout_width="60dp"
            android:layout_row="4"
            android:layout_column="1"
            android:textSize="25dp"
            android:background="@android:color/transparent"
            android:onClick="clickNumero" />

        <Button
            android:text="1"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_below="@+id/text_result"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/btn_1"
            android:layout_height="wrap_content"
            android:layout_width="60dp"
            android:layout_row="3"
            android:layout_column="0"
            android:textSize="25dp"
            android:background="@android:color/transparent"
            android:onClick="clickNumero" />

        <Button
            android:text="3"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:layout_below="@+id/text_result"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/btn_3"
            android:layout_height="wrap_content"
            android:layout_width="60dp"
            android:layout_row="3"
            android:layout_column="2"
            android:textSize="25dp"
            android:background="@android:color/transparent"
            android:onClick="clickNumero" />

        <Button
            android:text="4"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:layout_below="@+id/text_result"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/btn_4"
            android:layout_height="wrap_content"
            android:layout_width="60dp"
            android:layout_row="2"
            android:layout_column="0"
            android:textSize="25dp"
            android:background="@android:color/transparent"
            android:onClick="clickNumero" />

        <Button
            android:text="5"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:layout_below="@+id/text_result"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/btn_5"
            android:layout_height="wrap_content"
            android:layout_width="60dp"
            android:layout_row="2"
            android:layout_column="1"
            android:textSize="25dp"
            android:background="@android:color/transparent"
            android:onClick="clickNumero" />

        <Button
            android:text="7"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:layout_below="@+id/text_result"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/btn_7"
            android:layout_height="wrap_content"
            android:layout_width="60dp"
            android:layout_row="1"
            android:layout_column="0"
            android:background="@android:color/transparent"
            android:textSize="25dp"
            android:onClick="clickNumero" />

        <Button
            android:text="8"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:layout_below="@+id/text_result"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/btn_8"
            android:layout_height="wrap_content"
            android:layout_width="60dp"
            android:layout_row="1"
            android:layout_column="1"
            android:textSize="25dp"
            android:background="@android:color/transparent"
            android:onClick="clickNumero" />


        <Button
            android:text="."
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:layout_below="@+id/text_result"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/btn_decimal_point"
            android:layout_height="wrap_content"
            android:layout_width="60dp"
            android:layout_row="4"
            android:layout_column="0"
            android:textSize="25dp"
            android:background="@android:color/transparent"
            android:onClick="clickdot" />

        <Button
            android:text="-"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:layout_below="@+id/text_result"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/btn_negative"
            android:layout_height="wrap_content"
            android:layout_width="60dp"
            android:layout_row="3"
            android:layout_column="3"
            android:textSize="25dp"
            android:onClick="clickOp" />

        <Button
            android:text="="
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:layout_below="@+id/text_result"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/btn_result"
            android:layout_height="wrap_content"
            android:layout_width="60dp"
            android:layout_row="4"
            android:layout_column="2"
            android:textSize="25dp"
            android:textColor="@android:color/white"
            style="@style/Widget.AppCompat.Button.Small"
            android:textColorLink="?attr/colorPrimaryDark"
            android:backgroundTint="@color/colorAccent"
            android:onClick="clickequal" />

        <Button
            android:text="+"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:layout_below="@+id/text_result"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/btn_plus"
            android:layout_height="wrap_content"
            android:layout_width="60dp"
            android:layout_row="4"
            android:layout_column="3"
            android:textSize="25dp"
            android:onClick="clickOp" />

        <Button
            android:text="/"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:layout_below="@+id/text_result"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/btn_division"
            android:layout_height="wrap_content"
            android:layout_width="60dp"
            android:layout_row="1"
            android:layout_column="3"
            android:textSize="25dp"
            android:onClick="clickOp" />

        <TextView
            android:layout_height="match_parent"
            android:id="@+id/text_result"
            android:layout_marginLeft="8dp"
            android:layout_alignRight="@+id/grid_Layout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="?android:attr/textColorTertiary"
            android:textSize="30sp"
            android:layout_row="0"
            android:layout_column="0"
            android:gravity="right|center_vertical|center"
            android:layout_marginRight="20dp"
            android:maxLength="14"
            android:layout_columnSpan="4"
            android:layout_width="260dp"
            android:layout_marginTop="15dp" />

        <Button
            android:text="6"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:layout_below="@+id/text_result"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/btn_6"
            android:layout_height="wrap_content"
            android:layout_width="60dp"
            android:layout_row="2"
            android:layout_column="2"
            android:textSize="25dp"
            android:background="@android:color/transparent"
            android:onClick="clickNumero" />

        <Button
            android:text="9"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:layout_below="@+id/text_result"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/btn_9"
            android:layout_height="wrap_content"
            android:layout_width="60dp"
            android:layout_row="1"
            android:layout_column="2"
            android:textSize="25dp"
            android:background="@android:color/transparent"
            android:onClick="clickNumero" />

        <Button
            android:text="2"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:layout_below="@+id/text_result"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/btn_2"
            android:layout_height="wrap_content"
            android:layout_width="60dp"
            android:layout_row="3"
            android:layout_column="1"
            android:textSize="25dp"
            android:background="@android:color/transparent"
            android:onClick="clickNumero" />

        <Button
            android:text="x"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:layout_below="@+id/text_result"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/btn_multiplication"
            android:layout_height="wrap_content"
            android:layout_width="60dp"
            android:layout_row="2"
            android:layout_column="3"
            android:textSize="25dp"
            android:onClick="clickOp" />


    </GridLayout>

</RelativeLayout>
