<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_calculator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.upc.pda.clemente.laura.calculadora.CalculatorActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_result"
        android:layout_alignRight="@+id/grid_Layout"
        android:layout_alignEnd="@+id/grid_Layout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/btn_clear"
        android:layout_alignParentTop="true"
        android:textColor="?android:attr/textColorTertiary"
        android:textSize="30sp" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/grid_Layout"
        android:layout_below="@+id/text_result"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:text="0"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:layout_below="@+id/text_result"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/btn_0"
            android:layout_height="wrap_content"
            android:layout_width="60dp"
            android:layout_row="3"
            android:layout_column="1"
            android:textSize="25dp"
            android:background="@android:color/transparent"
            android:onClick="click0" />

        <Button
            android:text="1"
            android:layout_marginTop="8dp"
            android:layout_below="@+id/text_result"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/btn_1"
            android:layout_height="wrap_content"
            android:layout_width="60dp"
            android:layout_row="2"
            android:layout_column="0"
            android:textSize="25dp"
            android:background="@android:color/transparent"
            android:onClick="click1" />

        <Button
            android:text="2"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:layout_below="@+id/text_result"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/btn_2"
            android:layout_height="wrap_content"
            android:layout_width="60dp"
            android:layout_row="2"
            android:layout_column="1"
            android:textSize="25dp"
            android:background="@android:color/transparent"
            android:onClick="click2" />

        <Button
            android:text="3"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:layout_below="@+id/text_result"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/btn_3"
            android:layout_height="wrap_content"
            android:layout_width="60dp"
            android:layout_row="2"
            android:layout_column="2"
            android:textSize="25dp"
            android:background="@android:color/transparent"
            android:onClick="click3" />

        <Button
            android:text="4"
            android:layout_marginTop="8dp"
            android:layout_below="@+id/text_result"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/btn_4"
            android:layout_height="wrap_content"
            android:layout_width="60dp"
            android:layout_row="1"
            android:layout_column="0"
            android:textSize="25dp"
            android:background="@android:color/transparent"
            android:onClick="click4" />

        <Button
            android:text="5"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:layout_below="@+id/text_result"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/btn_5"
            android:layout_height="wrap_content"
            android:layout_width="60dp"
            android:layout_row="1"
            android:layout_column="1"
            android:textSize="25dp"
            android:background="@android:color/transparent"
            android:onClick="click5" />

        <Button
            android:text="7"
            android:layout_marginTop="8dp"
            android:layout_below="@+id/text_result"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/btn_7"
            android:layout_height="wrap_content"
            android:layout_width="60dp"
            android:layout_row="0"
            android:layout_column="0"
            android:background="@android:color/transparent"
            android:textSize="25dp"
            android:onClick="click7" />

        <Button
            android:text="8"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:layout_below="@+id/text_result"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/btn_8"
            android:layout_height="wrap_content"
            android:layout_width="60dp"
            android:layout_row="0"
            android:layout_column="1"
            android:textSize="25dp"
            android:background="@android:color/transparent"
            android:onClick="click8" />

        <Button
            android:text="9"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:layout_below="@+id/text_result"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/btn_9"
            android:layout_height="wrap_content"
            android:layout_width="60dp"
            android:layout_row="0"
            android:layout_column="2"
            android:textSize="25dp"
            android:background="@android:color/transparent"
            android:onClick="click9" />



        <Button
            android:text="."
            android:layout_marginTop="8dp"
            android:layout_below="@+id/text_result"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/btn_decimal_point"
            android:layout_height="wrap_content"
            android:layout_width="60dp"
            android:layout_row="3"
            android:layout_column="0"
            android:textSize="25dp"
            android:background="@android:color/transparent"
            android:onClick="clickdot" />

        <Button
            android:text="x"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:layout_below="@+id/text_result"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/btn_multiplication"
            android:layout_height="wrap_content"
            android:layout_width="60dp"
            android:layout_row="1"
            android:layout_column="3"
            android:textSize="25dp"
            android:onClick="clickmult" />

        <Button
            android:text="-"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:layout_below="@+id/text_result"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/btn_negative"
            android:layout_height="wrap_content"
            android:layout_width="60dp"
            android:layout_row="2"
            android:layout_column="3"
            android:textSize="25dp"
            android:onClick="clickneg" />

        <Button
            android:text="="
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:layout_below="@+id/text_result"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/btn_result"
            android:layout_height="wrap_content"
            android:layout_width="60dp"
            android:layout_row="3"
            android:layout_column="2"
            android:textSize="25dp"
            android:textColor="@android:color/white"
            style="@style/Widget.AppCompat.Button.Small"
            android:textColorLink="?attr/colorPrimaryDark"
            android:backgroundTint="@color/colorAccent"
            android:onClick="clickequal" />

        <Button
            android:text="+"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:layout_below="@+id/text_result"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/btn_plus"
            android:layout_height="wrap_content"
            android:layout_width="60dp"
            android:layout_row="3"
            android:layout_column="3"
            android:textSize="25dp"
            android:onClick="clickplus" />

        <Button
            android:text="/"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:layout_below="@+id/text_result"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/btn_division"
            android:layout_height="wrap_content"
            android:layout_width="60dp"
            android:layout_row="0"
            android:layout_column="3"
            android:textSize="25dp"
            android:onClick="clickdiv" />

        <Button
            android:text="6"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:layout_below="@+id/text_result"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/btn_6"
            android:layout_height="wrap_content"
            android:layout_width="60dp"
            android:layout_row="1"
            android:layout_column="2"
            android:textSize="25dp"
            android:background="@android:color/transparent"
            android:onClick="click6" />


    </GridLayout>

    <Button
        android:text="CLR"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/btn_clear"
        android:textColor="?android:attr/textColorTertiary"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/text_result"
        android:layout_toEndOf="@+id/text_result"
        android:onClick="clickclear" />

</RelativeLayout>
